<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StockActivity"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            style="@style/sectionLabel"
            android:text="Date" />

        <DatePicker
            android:id="@+id/dateStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />

        <TextView
            style="@style/sectionLabel"
            android:text="PhÃ©nobarbital" />

        <EditText
            android:id="@+id/phenoQuantiteRecue"
            style="@style/editInteger"
            android:hint="QUANTE RECUE" />

        <LinearLayout
            android:id="@+id/sw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phenoQuantiteUtilisee"
                style="@style/editInteger"
                android:layout_weight=".50"
                android:hint=" QUANTITE UTILISEE" />

            <EditText
                android:id="@+id/phenoQuantitePerdue"
                style="@style/editInteger"
                android:layout_weight=".50"
                android:hint="QUANTITE PERDUE" />
        </LinearLayout>

        <EditText
            android:id="@+id/phenoQuantiteRestante"
            style="@style/editInteger"
            android:hint="QUANTE RESTANTE" />

        <TextView
            style="@style/sectionLabel"
            android:text="Carbamazepine" />

        <EditText
            android:id="@+id/carbaQuantiteRecue"
            style="@style/editInteger"
            android:hint="QUANTE RECUE" />

        <LinearLayout
            android:id="@+id/w"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/carbaQuantiteUtilisee"
                style="@style/editInteger"
                android:layout_weight=".50"
                android:hint=" QUANTITE UTILISEE" />

            <EditText
                android:id="@+id/carbaQuantitePerdue"
                style="@style/editInteger"
                android:layout_weight=".50"
                android:hint="QUANTITE PERDUE" />
        </LinearLayout>

        <EditText
            android:id="@+id/carbaQuantiteRestante"
            style="@style/editInteger"
            android:hint="QUANTE RESTANTE" />
        <TextView
            style="@style/sectionLabel"
            android:text="Sodium valproate" />

        <EditText
            android:id="@+id/sodiQuantiteRecue"
            style="@style/editInteger"
            android:hint="QUANTE RECUE" />

        <LinearLayout
            android:id="@+id/ew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sodiQuantiteUtilisee"
                style="@style/editInteger"
                android:layout_weight=".50"
                android:hint=" QUANTITE UTILISEE" />

            <EditText
                android:id="@+id/sodiQuantitePerdue"
                style="@style/editInteger"
                android:layout_weight=".50"
                android:hint="QUANTITE PERDUE" />
        </LinearLayout>

        <EditText
            android:id="@+id/sodiQuantiteRestante"
            style="@style/editInteger"
            android:hint="QUANTE RESTANTE"
            android:imeOptions="actionDone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:text="Sauvegarder" />

            <Button
                android:id="@+id/saveSubmitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:text="Envoyer" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

